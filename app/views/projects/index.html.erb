<h1>Listing projects</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td>
          <%= link_to 'Show', project, class: 'btn' %>
          <%= link_to 'Edit', edit_project_path(project), class: 'btn' %>
          <% if project.canBeDestroyed %>
            <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          <% else %>
            <button id="btn_cant_destroy" class="btn btn-danger">Destroy</button>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<script>
$(function() {
  $( "#btn_cant_destroy" ).click(function( event ) {
    alert("can't destroy, has started or finished tasks");
  });
});
</script>

<%= paginate @projects %>

<%= link_to 'New Project', new_project_path %>
