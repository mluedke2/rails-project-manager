      <%= builder.label :name %><br>
      <%= builder.text_field :name %>
    </div>
    <div class="field">
      <%= builder.label :description %><br>
      <%= builder.text_field :description %>
    </div>
    <div class="field">
      <%= builder.label :status %><br>
      <%= builder.text_field :status %>
    </div>
    <div class="actions">
      <%= builder.submit %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
