<p id="notice"><%= notice %></p>

<h1>
  <strong>Name:</strong>
  <%= @project.name %>
</h1>

<table class="table">
  <tr>
    <td>Task Name</td>
    <td>Delete</td>
  </tr>

  <% @project.tasks.each do |task| %>
    <tr>
      <td><%= task.name %></td>
      <td>
        <%= form_for task, url: project_task_path(@project, task), method: :delete, remote: true do |f| %>
          <%= f.submit "Delete" %>
        <% end %>
      </td>
  <% end %>
</table>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
